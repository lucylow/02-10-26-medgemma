# Dockerfile for root orchestrator with memory layer
FROM python:3.10-slim
WORKDIR /app

# Backend for AIModelManager when available
COPY backend/ ./backend/
COPY app/ ./app/
COPY orchestrator/ ./orchestrator/

RUN pip install --no-cache-dir -r orchestrator/requirements.txt

ENV PYTHONPATH=/app:/app/backend
EXPOSE 7000
CMD ["uvicorn", "orchestrator.main:app", "--host", "0.0.0.0", "--port", "7000"]
