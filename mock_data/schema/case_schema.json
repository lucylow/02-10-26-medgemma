{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PediScreen mock case",
  "type": "object",
  "required": ["case_id", "created_at", "age_months", "locale", "caregiver_text", "images", "mock_inference"],
  "properties": {
    "case_id": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "age_months": { "type": "integer" },
    "locale": { "type": "string" },
    "caregiver_text": { "type": "string" },
    "images": { "type": "array", "items": { "type": "string" } },
    "embedding_b64": { "type": "string" },
    "emb_version": { "type": "string" },
    "mock_inference": {
      "type": "object",
      "properties": {
        "summary": { "type": "array", "items": { "type": "string" } },
        "risk": { "enum": ["on_track", "monitor", "refer"] },
        "recommendations": { "type": "array", "items": { "type": "string" } },
        "parent_text": { "type": "string" },
        "explainability": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": { "type": { "type": "string" }, "detail": { "type": "string" }, "score": { "type": "number" } }
          }
        },
        "confidence": { "type": "number" },
        "adapter_id": { "type": "string" },
        "model_id": { "type": "string" }
      },
      "required": ["risk", "confidence"]
    },
    "audit_log": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": { "type": "string" },
          "actor_type": { "type": "string" },
          "actor_id": { "type": "string" },
          "action": { "type": "string" },
          "reason": { "type": "string" },
          "model_version": { "type": "string" },
          "adapter_id": { "type": "string" }
        }
      }
    },
    "time_to_referral_days": { "type": "integer" },
    "D_base": { "type": "boolean", "description": "Would have been detected in baseline (for early-ID metric)" }
  }
}
